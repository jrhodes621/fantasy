= form_for(@roster_player) do |f|
  - if @roster_player.errors.any?
    #error_explanation
      %h2
        = pluralize(@roster_player.errors.count, "error")
        prohibited this roster_player from being saved:
      %ul
        - @roster_player.errors.full_messages.each do |message|
          %li= message
  .actions
    = f.submit
